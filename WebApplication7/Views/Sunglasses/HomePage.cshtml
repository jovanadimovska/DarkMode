@model WebApplication7.Models.HomePageViewModel
@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>HomePage</title>
    <style>
        .carousel-img 
{
    width: 100%;
    height: 100%;
    object-fit: cover;
}
    </style>
</head>
<body>
   
    <div class="jumbotron-fluid">
        <div class="container">
            <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="img-fluid carousel-img" style="height: 600px" src="http://wardrobetrendsfashion.com/wp-content/uploads/2017/11/Gal-Gadot-Erroca-Eyewear-Campaign_3.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 bg-info" style="height: 600px" src="http://wardrobetrendsfashion.com/wp-content/uploads/2017/11/Gal-Gadot-Erroca-Eyewear-Campaign_1.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100 bg-danger" style="height: 600px" src="http://wardrobetrendsfashion.com/wp-content/uploads/2017/11/Gal-Gadot-Erroca-Eyewear-Campaign_2.jpg" alt="Third slide">
                    </div>
                </div>
            </div>
            <hr />
            <div class="row text-center">
                <h3 class="w-100 color=darkgrey text-bold text-monospace">Sunglasses on sale</h3>
            </div>
            <div class="row mt-4">
                @foreach (var item in Model.sunglasses)
                {
                    <div class="col-6 mt-2 mb-2 ">
                        <a href=@Url.Action("ProductDetail", "Sunglasses", new { id = item.Id})><img class="img-thumbnail" style="height: 300px" src=@item.imgUrl alt="Third slide"></a>
                        <h5 class="text-center text-white text-monospace"> Serial number: @item.Id </h5>
                    </div>
                }
            </div>
           
        </div>
    </div>
</body>
</html>

